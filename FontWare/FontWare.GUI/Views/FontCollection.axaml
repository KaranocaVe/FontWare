<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:FontWare.GUI.Views"
             xmlns:fontViews="clr-namespace:FontWare.GUI.Views.FontViews"
             xmlns:fontFilters="clr-namespace:FontWare.GUI.Views.FontViews.FontFilters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FontWare.GUI.Views.FontCollection">

    <UserControl.Styles>
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="0" />
        </Style>
    </UserControl.Styles>

    <DockPanel>
        <fontFilters:FontFilter DockPanel.Dock="Top"  />
        <ScrollViewer>
            <ListBox Classes="WithoutCheck"
                     Padding="0" Margin="0"
                     SelectionMode="Multiple">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <views:WrapPanel ItemsAlignment="SpaceBetween" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <views:FontCard />
                <views:FontCard />
                <views:FontCard />
                <views:FontCard />
                <views:FontCard />
                <views:FontCard />
                <views:FontCard />
                <views:FontCard />
                <views:FontCard />
            </ListBox>
        </ScrollViewer>
    </DockPanel>


</UserControl>